<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="left-form" stylesheets="@loginDesign.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Dashboard">
   <children>
      <TextField fx:id="search" layoutX="194.0" layoutY="14.0" onAction="#btnSearchAction" prefHeight="35.0" prefWidth="387.0" promptText="Search Member" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TableView fx:id="tableView" layoutX="26.0" layoutY="56.0" onMouseClicked="#getItem" prefHeight="198.0" prefWidth="558.0" styleClass="textfield">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="149.0" text="Name" />
          <TableColumn fx:id="emailColumn" minWidth="4.0" prefWidth="124.0" text="E-mail" />
            <TableColumn fx:id="uidColumn" prefWidth="74.0" text="UID" />
            <TableColumn fx:id="mobileColumn" prefWidth="119.0" text="Mobile" />
            <TableColumn fx:id="bloodgroupColumn" prefWidth="90.0" text="Blood Group" />
        </columns>
      </TableView>
      <Button fx:id="btnHome" layoutX="104.0" layoutY="14.0" mnemonicParsing="false" onAction="#setBtnHome" prefHeight="35.0" prefWidth="75.0" styleClass="login-btn" text="Home" />
      <TextField fx:id="tffullname" layoutX="115.0" layoutY="261.0" prefHeight="26.0" prefWidth="371.0" promptText="Full Name" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="tfemail" layoutX="115.0" layoutY="292.0" prefHeight="26.0" prefWidth="371.0" promptText="E-mail" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="tfuid" layoutX="115.0" layoutY="323.0" promptText="UID" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="tfmobile" layoutX="329.0" layoutY="327.0" promptText="Mobile" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="tfbloodgroup" layoutX="115.0" layoutY="355.0" prefHeight="26.0" prefWidth="87.0" promptText="Blood Group" styleClass="textfield" stylesheets="@loginDesign.css" />
      <Label layoutX="51.0" layoutY="267.0" text="Name" textFill="WHITE">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="49.0" layoutY="296.0" text="E-mail" textFill="WHITE">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="56.0" layoutY="327.0" text="UID" textFill="WHITE">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="28.0" layoutY="359.0" text="Blood Group" textFill="WHITE">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="277.0" layoutY="331.0" text="Mobile" textFill="WHITE">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Button fx:id="btnClose" layoutX="19.0" layoutY="14.0" mnemonicParsing="false" onAction="#setBtnClose" prefHeight="35.0" prefWidth="75.0" styleClass="close" text="Close" />
    <Button fx:id="btnAdd" layoutX="506.0" layoutY="259.0" mnemonicParsing="false" onAction="#setBtnAdd" prefHeight="35.0" prefWidth="65.0" styleClass="add-btn" text="Add" />
      <Button fx:id="btnDelete" layoutX="506.0" layoutY="310.0" mnemonicParsing="false" onAction="#btnDeleteAlert" prefHeight="35.0" prefWidth="65.0" styleClass="delete-btn" text="Delete" />
   </children>
</AnchorPane>
