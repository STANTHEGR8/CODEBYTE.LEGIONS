<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainDashboard" prefHeight="400.0" prefWidth="600.0" styleClass="left-form" stylesheets="@loginDesign.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.Dashboard">
   <children>
      <ImageView fx:id="logo" fitHeight="173.0" fitWidth="169.0" layoutX="10.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Untitled design.png" />
         </image>
      </ImageView>
      <TextField fx:id="search" layoutX="195.0" layoutY="10.0" prefHeight="40.0" prefWidth="391.0" promptText="Search Members" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TableView fx:id="table" layoutX="193.0" layoutY="56.0" prefHeight="198.0" prefWidth="391.0" styleClass="textfield">
        <columns>
          <TableColumn fx:id="name" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="email" prefWidth="75.0" text="E-mail" />
            <TableColumn fx:id="uid" prefWidth="75.0" text="UID" />
            <TableColumn fx:id="mobile" prefWidth="75.0" text="Mobile" />
            <TableColumn fx:id="bloodgroup" prefWidth="90.0" text="Blood Grroup" />
        </columns>
      </TableView>
      <Button fx:id="btnHome" layoutX="499.0" layoutY="276.0" mnemonicParsing="false" onAction="#setBtnHome" prefHeight="40.0" prefWidth="75.0" styleClass="login-btn" text="Home" />
      <ButtonBar layoutY="209.0" prefHeight="40.0" prefWidth="173.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#setBtnAdd" styleClass="add-btn" text="Add" />
            <Button mnemonicParsing="false" onAction="#btnDeleteAlert" styleClass="delete-btn" text="Delete" />
        </buttons>
      </ButtonBar>
      <TextField fx:id="tffullname" layoutX="115.0" layoutY="261.0" prefHeight="26.0" prefWidth="371.0" promptText="Full Name" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="tfemail" layoutX="115.0" layoutY="292.0" prefHeight="26.0" prefWidth="371.0" promptText="E-mail" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="tfuid" layoutX="115.0" layoutY="323.0" promptText="UID" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="tfmobile" layoutX="329.0" layoutY="327.0" promptText="Mobile" styleClass="textfield" stylesheets="@loginDesign.css" />
      <TextField fx:id="tfbloodgroup" layoutX="115.0" layoutY="355.0" prefHeight="26.0" prefWidth="87.0" promptText="Blood Group" styleClass="textfield" stylesheets="@loginDesign.css" />
      <Label layoutX="51.0" layoutY="267.0" text="Name">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="49.0" layoutY="296.0" text="E-mail">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="56.0" layoutY="327.0" text="UID">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="28.0" layoutY="359.0" text="Blood Group">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Label layoutX="277.0" layoutY="331.0" text="Mobile">
         <font>
            <Font name="Bell MT Bold" size="15.0" />
         </font>
      </Label>
      <Button fx:id="btnClose" layoutX="499.0" layoutY="323.0" mnemonicParsing="false" onAction="#setBtnClose" prefHeight="35.0" prefWidth="75.0" styleClass="close" text="Close" />
   </children>
</AnchorPane>
